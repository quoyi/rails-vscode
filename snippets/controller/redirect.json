{
  "redirect-to": {
    "prefix": "redirect-to",
    "body": "redirect_to ${1:path}",
    "description": "redirect_to path"
  },
  "redirect-to-action": {
    "prefix": "redirect-to-action",
    "body": "redirect_to action: '${1:index}'",
    "description": "redirect_to (action)"
  },
  "redirect-to-action-id": {
    "prefix": "redirect-to-action-id",
    "body": "redirect_to action: '${1:show}', id: ${0:@item}",
    "description": "redirect_to (action, id)"
  },
  "redirect-to-controller": {
    "prefix": "redirect-to-controller",
    "body": "redirect_to controller: '${1:items}', action: '${2:list}'",
    "description": "redirect_to (controller, action)"
  },
  "redirect-to-controller-action-id": {
    "prefix": "redirect-to-controller-action-id",
    "body": "redirect_to controller: '${1:items}', action: '${2:show}', id: ${0:@item}",
    "description": "redirect_to (controller, action, id)"
  },
  "redirect-to-nested-path": {
    "prefix": "redirect-to-nested-path",
    "body": "redirect_to ${1:${2:parent}_${3:child}_path(${4:@}${5:${2}}, ${6:@}${7:${3}})}",
    "description": "redirect_to (nested path)"
  },
  "redirect-to-nested-path-plural": {
    "prefix": "redirect-to-nested-path-plural",
    "body": "redirect_to ${1:${2:parent}_${3:child}_path(${4:@}${5:${2}})}",
    "description": "redirect_to (nested path plural)"
  },
  "redirect-to-path": {
    "prefix": "redirect-to-path",
    "body": "redirect_to ${1:${2:model}_path(${3:@}${4:${2}})}",
    "description": "redirect_to (path)"
  },
  "redirect-to-path-plural": {
    "prefix": "redirect-to-path-plural",
    "body": "redirect_to ${1:${2:model}s_path}",
    "description": "redirect_to (path plural)"
  }
}
