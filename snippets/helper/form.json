    "description": "ERB check box"
  },
  "form-for-submit": {
    "prefix": "form-for-sbumit",
    "body": "<%= f.submit '${1:Submit}'${2:, disable_with: '${3:$1ing...}'} %>",
    "description": "form_for submit"
  },
  "f.text-field": {
    "prefix": "f.text_field",
    "body": "<%= f.text_field :${1:attribute} %>",
    "description": "f.text_field (fftf)"
  },
  "f.passowrd-field": {
    "prefix": "f.password",
    "body": "<%= f.password_field :${1:attribute} %>",
    "description": "f.password_field"
  },
  "f.radio-box": {
    "prefix": "f.radio-box",
    "body": "<%= f.radio_box :${1:attribute}, :${2:tag_value} %>",
