{
  "link_to": {
    "prefix": "link-to",
    "body": "<%= link_to '${1:text}', ${2:path}${3:, class: '${4:link}'} %>",
    "description": "ERB link_to"
  },
  "link_to_do": {
    "prefix": "link-to",
    "body": [
      "<%= link_to ${1:path}${2:, class: '${3:link}'} do %>",
      "\t$3",
      "<% end %>"
    ],
    "description": "ERB link_to"
  },
  "link_to_action": {
    "prefix": "link-to-action",
    "body": "<%= link_to '${1:text}', action: '${2:action}' %>",
    "description": "link_to (action)"
  },
  "link_to_action_id": {
    "prefix": "link-to-action-id",
    "body": "<%= link_to '${1:text}', action: '${2:edit}', id: ${3:@item} %>",
    "description": "link_to (action, id)"
  },
  "link_to_controller": {
    "prefix": "link-to-controller",
    "body": "<%= link_to '${1:text}', controller: '${2:items}' %>",
    "description": "link_to (controller)"
  },
  "link_to_controller_action": {
    "prefix": "link-to-controller-action",
    "body": "<%= link_to '${1:text}', controller: '${2:items}', action: '${3:index}' %>",
    "description": "link_to (controller, action)"
  },
  "link_to_controller_action_id": {
    "prefix": "link-to-controller-action-id",
    "body": "<%= link_to '${1:text}', controller: '${2:items}', action: '${3:edit}', id: ${4:@item} %>",
    "description": "link_to (controller, action, id)"
  },
  "link_to_path": {
    "prefix": "link-to-path",
    "body": "<%= link_to '${1:text}', ${2:${3:model}_path(${4:@}${3})} %>",
    "description": "link_to (path)"
  },
  "link_to_path_plural": {
    "prefix": "link-to-path-plural",
    "body": "<%= link_to '${1:text}', ${2:${3:model}s_path} %>",
    "description": "link_to (path plural)"
  },
  "link_to_nested_path": {
    "prefix": "link-to-nested-path",
    "body": "<%= link_to '${1:text}', ${2:${3:parent}_${4:child}_path(${5:@}${3}, ${7:@}${4})} %>",
    "description": "link_to (nested path)"
  },
  "link_to_nested_path_plural": {
    "prefix": "link-to-nested-path-plural",
    "body": "<%= link_to '${1:text}', ${2:${3:parent}_${4:child}_path(${5:@}${3})} %>",
    "description": "link_to (nested path plural)"
  },
  "link_to_model": {
    "prefix": "link-to-model",
    "body": "<%= link_to ${1:model}.${2:name}, ${3:${4:$1}_path(${5:$1})} %>",
    "description": "link_to model"
  }
}
