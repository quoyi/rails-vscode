{
  "for-loop": {
    "prefix": "for-loop",
    "body": [
      "<% if ${1:list}.present? %>",
      "\t<% for ${2:item} in ${1} %>",
      "\t\t$3",
      "\t<% end %>",
      "<% else %>",
      "\t$4",
      "<% end %>"
    ],
    "description": "ERB For loop"
  },
  "each": {
    "prefix": "each",
    "body": [
      "<% ${1:items}.each do |${2:item}| %>",
      "\t$0",
      "<% end %>"
    ],
    "description": "each do"
  },
  "if": {
    "prefix": "if",
    "body": [
      "<% if ${1:true} %>",
      "\t$0",
      "<% end %>"
    ],
    "description": "if ... end"
  },
  "unless": {
    "prefix": "unless",
    "body": [
      "<% unless ${1:false} %>",
      "\t$0",
      "<% end %>"
    ],
    "description": "unless ... end"
  },
  "else": {
    "prefix": "else",
    "body": "<% else %>",
    "description": "else"
  },
  "elsif": {
    "prefix": "else-if",
    "body": "<% elsif ${1:true} %>",
    "description": "elsif"
  },
  "if-else": {
    "prefix": "if-else",
    "body": [
      "<% if ${1:true} %>",
      "\t$2",
      "<% else %>",
      "\t$3",
      "<% end %>"
    ],
    "description": "if ... else ... end"
  },
  "if-unless-inline": {
    "prefix": "if-unless-inline",
    "body": "<%= ${1:code} ${2|if,unless|} ${3:condition} %>",
    "description": "if or unless inline"
  },
  "end": {
    "prefix": "end",
    "body": "<% end %>",
    "description": "end"
  },
  "emded": {
    "prefix": "emded",
    "body": "<% $0 %>",
    "description": "embed ruby ERB"
  },
  "emded-print": {
    "prefix": "emded-print",
    "body": "<%= $0 %>",
    "description": "output embedding tag"
  },
  "collection-select": {
    "prefix": "collection-select",
    "body": "<%= collection_select(:${1:user}, :${2:id}, ${3:@users}, :${4:id}, :${5:name}) %>",
    "description": "ERB collection select"
  },
  "flash": {
    "prefix": "flash",
    "body": "flash[:${1|notice,success,error|}] = '${2:message}'",
    "description": "flash[â€¦]"
  },
  "format": {
    "prefix": "format",
    "body": "format.${1|js,xml,html|}${2: { $0 \\}}",
    "description": "format.format"
  },
  "map": {
    "prefix": "map",
    "body": "map(&:${1:id})",
    "description": "map(&:sym_proc)"
  },
  "bye-bug": {
    "prefix": "bb",
    "body": "<%= byebug %>",
    "description": "buy bug"
  },
  "buy-bug-erb": {
    "prefix": "db",
    "body": "<%= debug(params) if Rails.env.development? %>",
    "description": "byebug"
  },
  "binding.pry": {
    "prefix": "bp",
    "body": "<%= binding.pry %>",
    "description": "binding.pry"
  },
  "image_tag": {
    "prefix": "image_tag",
    "body": "<%= image_tag src:$1, alt: '$2' %>",
    "description": "image_tag"
  },
  "image_pack_tag": {
    "prefix": "image_pack_tag",
    "body": "<%= image_pack_tag src:$1, alt: '$2' %>",
    "description": "image_pack_tag"
	}
}
